<div class="space-y-6">
  <div class="md:flex md:items-center md:justify-between">
    <div class="flex-1 min-w-0">
      <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate"><%= @shop.name %></h2>
      <div class="mt-1 flex items-center space-x-2">
        <span class="px-2.5 py-0.5 rounded-full text-xs font-medium <%= @shop.is_active ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
          <%= @shop.is_active ? 'Active' : 'Inactive' %>
        </span>
        <span class="text-sm text-gray-500">Mall: <%= @shop.mall&.mall_name %></span>
      </div>
    </div>
    <div class="mt-4 flex md:mt-0 md:ml-4 space-x-3">
      <%= link_to 'Edit Shop', edit_shop_admins_shop_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
      
      <% if @shop.is_active? %>
        <%= button_to 'Deactivate', deactivate_shop_admins_shop_path, method: :patch, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700" %>
      <% else %>
        <%= button_to 'Activate', activate_shop_admins_shop_path, method: :patch, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700" %>
      <% end %>
    </div>
  </div>

  <!-- Stats -->
  <div class="grid grid-cols-1 gap-5 sm:grid-cols-3">
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <dt class="text-sm font-medium text-gray-500 truncate">Points Wallet Balance</dt>
        <dd class="mt-1 text-3xl font-semibold text-gray-900"><%= number_with_delimiter(@wallet&.points_received || 0) %></dd>
      </div>
    </div>
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <dt class="text-sm font-medium text-gray-500 truncate">Total Points Issued</dt>
        <dd class="mt-1 text-3xl font-semibold text-green-600"><%= number_with_delimiter(@total_earned) %></dd>
      </div>
    </div>
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <dt class="text-sm font-medium text-gray-500 truncate">Total Points Redeemed</dt>
        <dd class="mt-1 text-3xl font-semibold text-red-600"><%= number_with_delimiter(@total_redeemed) %></dd>
      </div>
    </div>
  </div>

  <!-- Quick Links -->
  <div class="bg-white shadow sm:rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Quick Actions</h3>
      <div class="grid grid-cols-2 gap-4 sm:grid-cols-4">
        <%= link_to shop_admins_offers_path, class: "text-center p-4 border rounded-lg hover:bg-gray-50" do %>
          <div class="text-2xl mb-1">ğŸ</div>
          <div class="text-sm font-medium text-gray-900">Manage Offers</div>
        <% end %>
        
        <%= link_to shop_admins_stamps_path, class: "text-center p-4 border rounded-lg hover:bg-gray-50" do %>
          <div class="text-2xl mb-1">ğŸ«</div>
          <div class="text-sm font-medium text-gray-900">Stamp Programs</div>
        <% end %>
        
        <%= link_to new_shop_admins_redemption_path, class: "text-center p-4 border rounded-lg hover:bg-gray-50" do %>
          <div class="text-2xl mb-1">ğŸ“±</div>
          <div class="text-sm font-medium text-gray-900">Redeem Points</div>
        <% end %>
        
        <%= link_to shop_admins_redemptions_path, class: "text-center p-4 border rounded-lg hover:bg-gray-50" do %>
          <div class="text-2xl mb-1">ğŸ“Š</div>
          <div class="text-sm font-medium text-gray-900">Transaction History</div>
        <% end %>
      </div>
    </div>
  </div>
</div>

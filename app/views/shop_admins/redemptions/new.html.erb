<div class="max-w-lg mx-auto">
  <div class="text-center mb-8">
    <h1 class="text-2xl font-bold text-gray-900">Redeem User Points</h1>
    <p class="mt-2 text-sm text-gray-600">Scan customer's QR code or enter their email to redeem points</p>
  </div>

  <div class="bg-white shadow sm:rounded-lg p-6">
    <%= form_with url: shop_admins_redemptions_path, method: :post, class: "space-y-6" do |form| %>
      <div>
        <%= form.label :qr_code, "Customer ID or Email", class: "block text-sm font-medium text-gray-700" %>
        <div class="mt-1">
          <%= form.text_field :qr_code, placeholder: "Enter user email or scan QR code", class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md", autofocus: true %>
        </div>
        <p class="mt-1 text-xs text-gray-500">Scan QR code or manually enter customer's email</p>
      </div>

      <div>
        <%= form.label :points, "Points to Redeem", class: "block text-sm font-medium text-gray-700" %>
        <div class="mt-1">
          <%= form.number_field :points, min: 1, placeholder: "Enter points amount", class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
        </div>
        <p class="mt-1 text-xs text-gray-500">1 point = <%= number_to_currency(SystemConfiguration.point_value) %></p>
      </div>

      <div>
        <%= form.submit "Redeem Points", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 cursor-pointer" %>
      </div>
    <% end %>
  </div>

  <div class="mt-8 bg-white shadow sm:rounded-lg p-6">
    <h3 class="text-lg font-medium text-gray-900 mb-4">ðŸ“± QR Scanner</h3>
    <div class="border-2 border-dashed border-gray-300 rounded-lg p-8 text-center">
      <div class="text-6xl mb-4">ðŸ“·</div>
      <p class="text-sm text-gray-500">QR scanning requires camera access and JavaScript library integration.</p>
      <p class="text-xs text-gray-400 mt-2">Manual entry is available above.</p>
    </div>
  </div>
</div>

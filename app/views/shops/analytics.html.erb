<div class="space-y-6">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Analytics: <%= @shop.name %></h1>
      <p class="text-sm text-gray-600">Performance insights and wallet balance.</p>
    </div>
    <%= link_to 'Back to Shop', shop_path(@shop), class: "text-sm font-medium text-primary hover:text-primary" %>
  </div>

  <div class="grid grid-cols-1 gap-5 sm:grid-cols-3">
    <div class="bg-white overflow-hidden shadow rounded-lg border border-gray-200 p-5">
      <dt class="text-sm font-medium text-gray-500">Wallet Balance</dt>
      <dd class="mt-1 text-3xl font-semibold text-primary">
        <%= @wallet&.points_received || 0 %> <span class="text-sm text-gray-400 font-normal">pts</span>
      </dd>
    </div>
    <div class="bg-white overflow-hidden shadow rounded-lg border border-gray-200 p-5">
      <dt class="text-sm font-medium text-gray-500">Total Lifetime Earnings</dt>
      <dd class="mt-1 text-3xl font-semibold text-gray-900"><%= @total_earnings %></dd>
    </div>
    <div class="bg-white overflow-hidden shadow rounded-lg border border-gray-200 p-5">
      <dt class="text-sm font-medium text-gray-500">Total Redemptions</dt>
      <dd class="mt-1 text-3xl font-semibold text-gray-900"><%= @total_redemptions %></dd>
    </div>
  </div>

  <div class="bg-white p-6 shadow rounded-lg border border-gray-200">
    <h3 class="text-lg font-medium text-gray-900 mb-4">Points Issued Trend (Last 30 Days)</h3>
    <div class="h-96">
      <canvas id="shopEarningsChart"></canvas>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    const ctx = document.getElementById('shopEarningsChart').getContext('2d');

    // Transform Ruby Hash into JS Arrays
    const labels = <%= raw @monthly_earnings.keys.map { |date| date.strftime("%b %d") } %>;
    const data = <%= @monthly_earnings.values %>;

    new Chart(ctx, {
        type: 'bar',
        data: {
            labels: labels,
            datasets: [{
                label: 'Points Earned',
                data: data,
                backgroundColor: '#4f46e5', // Indigo-600
                borderRadius: 4
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                y: { beginAtZero: true, grid: { display: false } },
                x: { grid: { display: false } }
            },
            plugins: {
                legend: { display: false }
            }
        }
    });
</script>
<!DOCTYPE html>
<html>
<head>
  <title>Admin Dashboard</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            primary: '#213448',
            secondary: '#547792',
            ternary: '#94B4C1',
            quaternary: '#ECEFCA',
            error: '#D9534F',
            success: '#5CB85C',
            warning: '#F0AD4E',
            info: '#5BC0DE',
          }
        }
      }
    }
  </script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>

<body class="bg-gray-100">
<!-- Navigation -->
<nav class="bg-primary text-white shadow-lg">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      <div class="flex">
        <div class="flex-shrink-0 flex items-center">
          <h1 class="text-2xl font-bold">üè™ Admin Dashboard</h1>
        </div>
        <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
          <% if current_mall_admin %>
            <%= link_to "Dashboard", root_path, class: "inline-flex items-center px-1 pt-1 border-b-2 #{current_page?(root_path) ? 'border-white' : 'border-transparent hover:border-gray-300'} text-sm font-medium" %>
            <%= link_to "Users", users_path, class: "inline-flex items-center px-1 pt-1 border-b-2 #{current_page?(users_path) ? 'border-white' : 'border-transparent hover:border-gray-300'} text-sm font-medium" %>
            <%= link_to "Shops", shops_path, class: "inline-flex items-center px-1 pt-1 border-b-2 #{current_page?(shops_path) ? 'border-white' : 'border-transparent hover:border-gray-300'} text-sm font-medium" %>
            <%= link_to "Offers", offers_path, class: "inline-flex items-center px-1 pt-1 border-b-2 #{current_page?(offers_path) ? 'border-white' : 'border-transparent hover:border-gray-300'} text-sm font-medium" %>
            <%= link_to "Stamps", stamps_path, class: "inline-flex items-center px-1 pt-1 border-b-2 #{current_page?(stamps_path) ? 'border-white' : 'border-transparent hover:border-gray-300'} text-sm font-medium" %>
          <% end %>
        </div>
        </div>

      <div class="flex items-center">
        <% if current_mall_admin %>
          <span class="text-sm mr-4"><%= current_mall_admin.name %> (Mall Admin)</span>
          <%= button_to "Logout", destroy_mall_admin_session_path, method: :delete, class: "text-sm font-medium hover:text-gray-300 bg-transparent border-none cursor-pointer text-white" %>
        <% elsif current_shop_admin %>
          <span class="text-sm mr-4"><%= current_shop_admin.name %> (Shop Admin)</span>
          <%= button_to "Logout", destroy_shop_admin_session_path, method: :delete, class: "text-sm font-medium hover:text-gray-300 bg-transparent border-none cursor-pointer text-white" %>
        <% else %>
          <div class="space-x-4">
            <%= link_to "Mall Admin Login", new_mall_admin_session_path, class: "text-sm font-medium hover:text-gray-300" %>
            <%= link_to "Shop Admin Login", new_shop_admin_session_path, class: "text-sm font-medium hover:text-gray-300" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</nav>

<!-- Flash Messages -->
<% if notice %>
  <div class="max-w-7xl mx-auto mt-4 px-4 sm:px-6 lg:px-8">
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert">
      <span class="block sm:inline"><%= notice %></span>
    </div>
  </div>
<% end %>

<% if alert %>
  <div class="max-w-7xl mx-auto mt-4 px-4 sm:px-6 lg:px-8">
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
      <span class="block sm:inline"><%= alert %></span>
    </div>
  </div>
<% end %>

<!-- Main Content -->
<main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
  <%= yield %>
</main>
</body>
</html>
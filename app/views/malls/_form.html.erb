<%= form_with(model: mall, class: "contents") do |form| %>
  <% if mall.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(mall.errors.count, "error") %> prohibited this mall from being saved:</h2>

      <ul>
        <% mall.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :mall_name, class: "block font-medium text-gray-700 mb-1" %>
    <%= form.text_field :mall_name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full focus:border-primary focus:ring-indigo-600" %>
  </div>

  <div class="my-5">
    <%= form.label :location, class: "block font-medium text-gray-700 mb-1" %>
    <%= form.text_field :location, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full focus:border-primary focus:ring-indigo-600" %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-primary text-white inline-block font-medium cursor-pointer hover:bg-secondary" %>
  </div>
<% end %>

<%= form_with(model: campaign, class: "space-y-6") do |form| %>
  <% if campaign.errors.any? %>
    <div class="bg-red-50 p-4 rounded-md">
      <h3 class="text-sm font-medium text-red-800"><%= pluralize(campaign.errors.count, "error") %> prohibited this campaign from being saved:</h3>
      <ul class="mt-2 list-disc pl-5 text-sm text-red-700">
        <% campaign.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
    <div class="mt-1">
      <%= form.text_field :name, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
    </div>
  </div>

  <div>
    <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
    <div class="mt-1">
      <%= form.text_area :description, rows: 3, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
    </div>
  </div>

  <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-2">
    <div>
      <%= form.label :start_date, class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= form.date_field :start_date, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
      </div>
    </div>

    <div>
      <%= form.label :end_date, class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= form.date_field :end_date, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-2">
    <div>
      <%= form.label :status, class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= form.select :status, Campaign.statuses.keys.map { |k| [k.titleize, k] }, {}, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
      </div>
    </div>

    <div>
      <%= form.label :shop_id, "Shop (Optional - Leave blank for Mall Wide)", class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= form.collection_select :shop_id, Shop.all, :id, :name, { include_blank: true }, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
      </div>
    </div>
  </div>

  <div class="flex justify-end">
    <%= link_to 'Cancel', campaigns_path, class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 mr-3" %>
    <%= form.submit class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 cursor-pointer" %>
  </div>
<% end %>

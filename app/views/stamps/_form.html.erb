<%= form_with(model: stamp, class: "contents") do |form| %>
  <% if stamp.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(stamp.errors.count, "error") %> prohibited this stamp from being saved:</h2>

      <ul>
        <% stamp.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name, class: "block font-medium text-gray-700 mb-1" %>
    <%= form.text_field :name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full focus:border-primary focus:ring-indigo-600" %>
  </div>

  <div class="my-5">
    <%= form.label :description, class: "block font-medium text-gray-700 mb-1" %>
    <%= form.text_area :description, rows: 4, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full focus:border-primary focus:ring-indigo-600" %>
  </div>

  <div class="my-5">
    <%= form.label :shop_id, class: "block font-medium text-gray-700 mb-1" %>
    <%= form.collection_select :shop_id, Shop.all, :id, :name, { prompt: "Select a Shop" }, { class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full focus:border-primary focus:ring-indigo-600" } %>
  </div>

  <div class="my-5 grid grid-cols-1 md:grid-cols-2 gap-4">
    <div>
      <%= form.label :start_date, class: "block font-medium text-gray-700 mb-1" %>
      <%= form.datetime_field :start_date, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full focus:border-primary focus:ring-indigo-600" %>
    </div>
    <div>
      <%= form.label :end_date, class: "block font-medium text-gray-700 mb-1" %>
      <%= form.datetime_field :end_date, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full focus:border-primary focus:ring-indigo-600" %>
    </div>
  </div>

  <div class="my-5 grid grid-cols-1 md:grid-cols-2 gap-4">
    <div>
      <%= form.label :expiration_limit, class: "block font-medium text-gray-700 mb-1" %>
      <%= form.datetime_field :expiration_limit, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full focus:border-primary focus:ring-indigo-600" %>
    </div>
    <div>
      <%= form.label :stamps_limit, class: "block font-medium text-gray-700 mb-1" %>
      <%= form.number_field :stamps_limit, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full focus:border-primary focus:ring-indigo-600" %>
    </div>
  </div>

  <div class="my-5">
    <%= form.label :stamps_required, class: "block font-medium text-gray-700 mb-1" %>
    <%= form.number_field :stamps_required, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full focus:border-primary focus:ring-indigo-600" %>
  </div>

  <div class="my-5">
    <%= form.label :active, class: "block font-medium text-gray-700 mb-1" %>
    <%= form.check_box :active, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 focus:border-primary focus:ring-indigo-600" %>
  </div>

  <div class="my-5 grid grid-cols-1 md:grid-cols-2 gap-4">
    <div>
      <%= form.label :reward_type, class: "block font-medium text-gray-700 mb-1" %>
      <%= form.select :reward_type, [['Free Item', 'free_item'], ['Discount', 'discount']], { prompt: "Select Reward Type" }, { class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full focus:border-primary focus:ring-indigo-600" } %>
    </div>
    <div>
      <%= form.label :reward_value_input, "Reward Value (Amount/Percent)", class: "block font-medium text-gray-700 mb-1" %>
      <%= form.text_field :reward_value_input, value: stamp.reward_value&.dig("value"), class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full focus:border-primary focus:ring-indigo-600" %>
    </div>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-primary text-white inline-block font-medium cursor-pointer hover:bg-secondary" %>
  </div>
<% end %>
